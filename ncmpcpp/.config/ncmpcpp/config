progressbar_look = "━━━"
progressbar_elapsed_color = "cyan"

# Visualizer
visualizer_in_stereo = "yes"
visualizer_output_name = "fifo"
visualizer_data_source = "/tmp/mpd.fifo"
visualizer_type = "spectrum"
visualizer_autoscale = "yes"
visualizer_fps = "60"
#visualizer_color = "white,cyan,blue,green,yellow,red"
visualizer_color = 9
visualizer_look = "▋▋"

# Misc
display_bitrate = "no"
enable_window_title = "no"
mouse_support = "yes"

# cheat sheet
# %l - length
# %f - filename
# %D - directory
# %a - artist
# %t - title
# %b - album
# %y - year
# %n - track number (01/12 -> 01)
# %N - full track info (01/12 -> 01/12)
# %g - genre
# %c - composer
# %p - performer
# %d - disc
# %C - comment
# $R - begin right alignment
# colors
# $0 - default window color
# $1 - black
# $2 - red
# $3 - green
# $4 - yellow
# $5 - blue
# $6 - magenta
# $7 - cyan
# $8 - white
# $9 - end of current color
#
# # Notify
# execute_on_song_change = notify-send "Now Playing:" "$(mpc current)"
execute_on_song_change = "$HOME/.config/ncmpcpp/notify.sh"
